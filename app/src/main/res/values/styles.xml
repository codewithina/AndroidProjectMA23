<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Style for headlines. -->
    <style name="HeadlineText" parent="Theme.AppCompat">
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style for subheadlines -->
    <style name="SubheadlineText" parent="Theme.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Style for user interest text in profile creation -->
    <style name="userInterestsText" parent="Theme.AppCompat">
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">12sp</item>
        <item name="autoSizeMaxTextSize">18sp</item>
        <item name="autoSizeStepGranularity">1sp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <!-- Style for the custom dialog popup window -->
    <style name="CustomAlertDialogStyle" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/CustomDialogButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/CustomDialogButtonStyle</item>
    </style>

    <!-- Style for the buttons in the custom dialog popup window -->
    <style name="CustomDialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">

    </style>

    <style name="CircularShapeAppearance" parent="">
        <item name="cornerSize">50%</item>
    </style>
</resources>